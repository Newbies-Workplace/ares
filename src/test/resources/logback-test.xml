<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="VERBOSE">
        <appender-ref ref="STDOUT"/>
    </root>

    <logger name="org.testcontainers" level="VERBOSE"/>
    <logger name="com.github.dockerjava" level="VERBOSE"/>
    <logger name="com.zaxxer.hikari" level="VERBOSE"/>
    <logger name="pl.newbies" level="VERBOSE"/>
    <logger name="org.mariadb" level="VERBOSE"/>
    <logger name="org.flywaydb" level="VERBOSE"/>
</configuration>